<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Payroll KPI Sheet Views -->
  <record id="view_payroll_kpi_sheet_tree" model="ir.ui.view">
    <field name="name">payroll.kpi.sheet.tree</field>
    <field name="model">payroll.kpi_sheet</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="run_id"/>
        <field name="period_id"/>
        <field name="quality_profile_id"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_payroll_kpi_sheet_form" model="ir.ui.view">
    <field name="name">payroll.kpi.sheet.form</field>
    <field name="model">payroll.kpi_sheet</field>
    <field name="arch" type="xml">
      <form string="Payroll KPI Sheet">
        <header>
          <button name="action_compute_kpi" type="object" string="Compute KPI" class="btn-primary" groups="payroll_3c.group_payroll_officer,payroll_3c.group_payroll_manager"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="run_id"/>
            <field name="period_id"/>
            <field name="quality_profile_id"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids" context="{'default_sheet_id': active_id}">
                <tree editable="bottom" create="0" delete="1">
                  <field name="employee_id" readonly="1"/>
                  <field name="total_score" readonly="1"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_payroll_kpi_sheets" model="ir.actions.act_window">
    <field name="name">Payroll KPI</field>
    <field name="res_model">payroll.kpi_sheet</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
